% 		***** Title *****
%------------------------------------------------------%
%
% if the titlepage option is used
\if@titlepage
\def\maketitle{\begin{titlepage}
\setcounter{footnote}{0}
\setcounter{page}{0}
\renewcommand{\thefootnote}{\fnsymbol{footnote}}
\begin{center}
\Large
\sffamily UNIVERSITY OF TORONTO\\[6pt]
\large
\@division\\
\rmfamily\normalsize\vspace{180pt}
%
\Large\@title\\
\vspace{36pt}
%
\large
\@author\\
\vspace{24pt}
\normalsize
\@date
\end{center}
\vfill
\@thanks
\end{titlepage}
\def\thanks##1{}
\@checkargs}
\else
\def\maketitle{%
	\begingroup
	\def\thefootnote{\fnsymbol{footnote}}%
	\def\@makefnmark{\hbox
       to3pt{$\m@th^{\@thefnmark}$\hss}}%
	\if@twocolumn
		\twocolumn[\@maketitle]%
	\else \newpage
		\global\@topnum\z@
		\@maketitle
	\fi
	\thispagestyle{plain}\@thanks
	\endgroup
	\setcounter{footnote}{0}%
	\let\maketitle\relax
	\let\@maketitle\relax
	\gdef\@thanks{}\def\thanks##1{}
	\@checkargs
}
\fi

\def\@maketitle{\vspace*{-\headheight}
\vspace*{-\headsep}
\vspace*{-\baselineskip}
\centerline{\reset@font\sffamily UNIVERSITY OF TORONTO}
\smallskip
\centerline{\reset@font\small\rmfamily\@division}
\bigskip
\begin{center}
\reset@font\Large\bfseries\boldmath\@title
\end{center}
\begin{center}
\reset@font\large\@author\ifx\@author\@empty\else\\\fi
\reset@font\small
\@date
\ifthenelse{\boolean{timestamp}}
  {\ifx\@date\@empty\else\\\fi v.~\@timestamp}{}
\end{center}
\bigskip
}


