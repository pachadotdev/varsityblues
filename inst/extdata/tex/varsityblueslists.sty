\newenvironment{enumerate'}
{\def\labelenumi{{$\text{\theenumi}'$.}} 
	\def\labelenumii{{\theenumii$'$.}}
	\def\labelenumiii{{\theenumiii$'$.}} 
	\def\labelenumiv{{\theenumiv$'$.}}\enumerate}
{\endlist}

\newcommand{\bfenumerate}{\def\labelenumi{{\bf\theenumi.}} 
	\def\labelenumii{{\bf\theenumii.}}
	\def\labelenumiii{{\bf\theenumiii.}} 
	\def\labelenumiv{{\bf\theenumiv.}}\enumerate}
\let\endbfenumerate\endlist
